package com.kh.common;

import javax.servlet.http.HttpServletRequestWrapper;

public class PasswordEncryptWrapper extends HttpServletRequestWrapper{

	public PasswordEncryptWrapper(HttpServletRequestWrapper request) {
		super(request);
	}
	
	// getParameter() 오버라이딩
	// 매개변수로 넘어온 password값만 찾아서 암호화시켜줄예정
	
	@Override
	public String getParameter(String name) {
		String value = "";
		
		// 매개변수로 전달받은 name변수의 값이 userPwd일때 암호화 작업 수행하기
		if(name.equals("userPwd")) {
			
		}else {
			super.getParameter(name);
		}
		return value;
	}
	
}
